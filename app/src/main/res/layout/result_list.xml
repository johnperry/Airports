<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ResultList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ListID"
        style="@style/ListID"/>

    <LinearLayout
        android:id="@+id/NameCityState"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ListID"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ListName"
            style="@style/ListName"/>

        <TextView
            android:id="@+id/ListCityState"
            style="@style/ListCityState"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/NameCityState"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ListBearing"
            style="@style/ListBearing"/>

        <TextView
            android:id="@+id/ListDistance"
            style="@style/ListDistance"/>

    </LinearLayout>

</RelativeLayout>